{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "lib",
		"lib": [
			"ES2022",
			"ESNext",
			"dom",
		],
		"sourceMap": true,
		"rootDir": "src",
    "experimentalDecorators": true,
		"allowJs": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true
	},
	"exclude": [
		"node_modules",
		"spec",
		"lib",
		"working",
		"vitest.config.ts"
	]
}
